{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nginx Web Server with Redis",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "default": "nginx"
        },
        "tag": {
          "type": "string",
          "default": "1.25.3"
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "ClusterIP",
          "enum": [
            "ClusterIP",
            "NodePort",
            "LoadBalancer"
          ]
        },
        "port": {
          "type": "integer",
          "default": 80
        }
      }
    },
    "redis": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string",
              "default": "redis"
            },
            "tag": {
              "type": "string",
              "default": "7.2.4"
            }
          }
        }
      }
    }
  }
}
